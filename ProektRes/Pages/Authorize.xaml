<Page x:Class="Kotov_41P_Project.Authorize"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kotov_41P_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorize">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
            <GroupBox Header="Введите логин и пароль">
                <StackPanel>
                    <GroupBox Header="Логин">
                        <TextBox x:Name="loginText"/>
                    </GroupBox>
                    <GroupBox Header="Пароль">
                        <PasswordBox x:Name="passwordText"/>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
            <Button Content="Войти" x:Name="loginButton" Width="150" Height="20" Margin="0, 10" Click="loginButton_Click"/>
            <Button Content="Зарегистрироваться"  x:Name="regButton" Width="150" Height="20" Click="regButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
